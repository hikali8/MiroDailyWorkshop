<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Config"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:id="@+id/tv_script_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="脚本管理"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="8dp"/>

        <Spinner
            android:id="@+id/sp_scripts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_selected_script"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="未选择脚本"
            android:textSize="12sp"
            android:alpha="0.75"
            android:layout_marginTop="6dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_refresh_scripts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="刷新脚本列表"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_paste_save_script"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="粘贴并保存脚本"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_preview_script"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="预览脚本内容"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_script"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="删除选中脚本"
            android:textAllCaps="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分组 / 执行计划"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginTop="18dp"/>

        <TextView
            android:id="@+id/tv_plan_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前计划：未设置"
            android:textSize="13sp"
            android:alpha="0.9"
            android:layout_marginTop="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_manage_groups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="分组/计划管理"
            android:textAllCaps="false"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_run_plan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="执行计划"
            android:textAllCaps="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"/>

    </LinearLayout>
</ScrollView>