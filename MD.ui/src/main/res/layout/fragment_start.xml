<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_page"
    android:orientation="vertical"
    android:fillViewport="true"
    android:clipToPadding="false">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:clipToPadding="false">

        <!-- ======= 卡片 1：无障碍 ======= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dp"
                android:layout_margin="16dp">
                <!-- 图标 -->
                <FrameLayout
                    android:id="@+id/icon1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_container"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_accessibility_24"
                        app:tint="@color/brand_purple" />
                </FrameLayout>

                <!-- 标题 -->
                <TextView
                    android:id="@+id/title1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="无障碍服务"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/icon1"/>

                <!-- 核定点 -->
                <ImageView
                    android:id="@+id/dot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_state_grey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <!-- 说明 -->
                <TextView
                    android:id="@+id/description1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="用于自动化测试和辅助功能"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/title1"
                    app:layout_constraintLeft_toLeftOf="@+id/title1"/>

                <!-- 按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_accessibility"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="立即开启"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/brand_purple"
                    app:layout_constraintLeft_toLeftOf="@+id/title1"
                    app:layout_constraintTop_toBottomOf="@id/description1"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ======= 卡片 2：媒体投影 ======= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dp"
                android:layout_margin="16dp">
                <!-- 图标 -->
                <FrameLayout
                    android:id="@+id/icon2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_container"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_projection_24"
                        app:tint="@color/brand_purple" />
                </FrameLayout>

                <!-- 标题 -->
                <TextView
                    android:id="@+id/title2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="媒体投影"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/icon2"/>

                <!-- 核定点 -->
                <ImageView
                    android:id="@+id/dot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_state_grey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <!-- 说明 -->
                <TextView
                    android:id="@+id/description2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="用于屏幕录制和投屏功能"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/title2"
                    app:layout_constraintLeft_toLeftOf="@+id/title2"/>

                <!-- 按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_projection"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="立即开启"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/brand_purple"
                    app:layout_constraintLeft_toLeftOf="@+id/title2"
                    app:layout_constraintTop_toBottomOf="@id/description2"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ======= 卡片 3：悬浮窗 ======= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dp"
                android:layout_margin="16dp">
                <!-- 图标 -->
                <FrameLayout
                    android:id="@+id/icon3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_container"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_overlay_24"
                        app:tint="@color/brand_purple" />
                </FrameLayout>

                <!-- 标题 -->
                <TextView
                    android:id="@+id/title3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="悬浮窗开启"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/icon3"/>

                <!-- 核定点 -->
                <ImageView
                    android:id="@+id/dot3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dot_state_grey"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"/>

                <!-- 说明 -->
                <TextView
                    android:id="@+id/description3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="用于显示测试覆盖层和工具面板"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/title3"
                    app:layout_constraintLeft_toLeftOf="@+id/title3"/>

                <!-- 按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_overlay"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="立即开启"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/brand_purple"
                    app:layout_constraintLeft_toLeftOf="@+id/title3"
                    app:layout_constraintTop_toBottomOf="@id/description3"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ======= 卡片 4：手势录制 ======= -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/card_bg"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="8dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="96dp"
                android:layout_margin="16dp">
                <!-- 图标 -->
                <FrameLayout
                    android:id="@+id/icon4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_icon_container"
                    android:padding="12dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_run_24"
                        app:tint="@color/brand_purple" />
                </FrameLayout>

                <!-- 标题 -->
                <TextView
                    android:id="@+id/title4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="脚本执行"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:layout_marginStart="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@+id/icon4"/>

                <!-- 启动对象选择框 -->
                <Spinner
                    android:id="@+id/spinner_apps"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_spinner"
                    app:layout_constraintLeft_toLeftOf="@+id/title4"
                    app:layout_constraintTop_toBottomOf="@id/title4"
                    app:layout_constraintRight_toRightOf="parent"/>

                <!-- 说明 -->
                <TextView
                    android:id="@+id/description4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="启动自动化测试流程"
                    android:textColor="@color/text_secondary"
                    android:textSize="14sp"
                    app:layout_constraintLeft_toLeftOf="@+id/title4"
                    app:layout_constraintTop_toBottomOf="@id/spinner_apps"/>

                <!-- 按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="等待权限"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@color/brand_purple"
                    app:layout_constraintLeft_toLeftOf="@+id/title4"
                    app:layout_constraintTop_toBottomOf="@id/description4"/>

                <!-- 按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn4_paste"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="粘贴脚本"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@android:color/darker_gray"
                    app:layout_constraintLeft_toLeftOf="@+id/title4"
                    app:layout_constraintTop_toBottomOf="@id/btn4"/>

                <!-- 按钮 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn4_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_marginTop="12dp"
                    android:text="删除脚本"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    app:cornerRadius="12dp"
                    app:backgroundTint="@android:color/darker_gray"
                    app:layout_constraintLeft_toLeftOf="@+id/title4"
                    app:layout_constraintTop_toBottomOf="@id/btn4_paste"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- ======= 使用说明 ======= -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="使用说明：依次开启三个权限，然后按照顺序开启测试"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="14sp" />

